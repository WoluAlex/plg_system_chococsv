<?xml version="1.0" encoding="utf-8" ?>
<form name="tokenindex">
    <fieldset name="tokenindex">
        <fields name="tokenindex">
			<field nema="token_ref"
				   type="text"
				   label="PLG_CONSOLE_CHOCOCSV_TOKEN_INDEX_LABEL"
				   description="PLG_CONSOLE_CHOCOCSV_TOKEN_INDEX_DESCRIPTION"
				   filter="alnum"
				   hint="Ex: app001,web42,site123"
				   maxlength="20"
				   required="true"
			/>
            <field name="base_url"
                   type="url"
                   default="https://example.org"
                   label="PLG_CONSOLE_CHOCOCSV_BASE_URL_LABEL"
                   description="PLG_CONSOLE_CHOCOCSV_BASE_URL_DESCRIPTION"
                   scheme="http,https"
                   size="100"
				   maxlength="100"
                   validate="url"
                   required="true"
				   icon="globe"
            />
            <field name="base_path"
                   type="url"
                   default="/api/index.php/v1"
                   label="PLG_CONSOLE_CHOCOCSV_BASE_PATH_LABEL"
                   description="PLG_CONSOLE_CHOCOCSV_BASE_PATH_DESCRIPTION"
                   relative="true"
				   size="100"
				   maxlength="50"
                   validate="url"
                   required="true"
            />
            <field name="auth_apikey"
                   type="password"
                   default=""
                   label="PLG_CONSOLE_CHOCOCSV_AUTH_API_KEY_LABEL"
                   description="PLG_CONSOLE_CHOCOCSV_AUTH_API_KEY_DESCRIPTION"
                   filter="raw"
                   required="true"
            />
			<field
				name="extra_default_fields"
				type="list"
				default=""
				label="PLG_CONSOLE_CHOCOCSV_EXTRA_DEFAULT_FIELDS_LABEL"
				description="PLG_CONSOLE_CHOCOCSV_EXTRA_DEFAULT_FIELDS_DESCRIPTION"
				hint="publish_up,publish_down,featured,featured_up,featured_down,images,urls"
				multiple="true"
				required="false"
			>
				<option value="publish_up">publish_up</option>
				<option value="publish_down">publish_down</option>
				<option value="featured">featured</option>
				<option value="featured_up">featured_up</option>
				<option value="featured_down">featured_down</option>
				<option value="images">images</option>
				<option value="urls">urls</option>
			</field>
			<field
				name="custom_fields"
				type="sql"
				default=""
				label="PLG_CONSOLE_CHOCOCSV_CHOOSE_CUSTOM_FIELDS_LABEL"
				description="PLG_CONSOLE_CHOCOCSV_CHOOSE_CUSTOM_FIELDS_DESCRIPTION"
				query="SELECT f.name, f.title FROM #__fields AS f WHERE f.context = 'com_content.article' AND f.state = 1"
				key_field="name"
				value_field="title"
				multiple="true"
				required="false"
				header="PLG_CONSOLE_CHOCOCSV_CHOOSE_AN_OPTION_LABEL"
			/>
        </fields>
    </fieldset>
</form>
